  if [ "${1}" ] ; then
    if [ -f "${1}" ] ; then
      cat "${1}" | while read link ; do youtube-dl -c --write-description --merge-output-format mp4 "${link}" ; done ; date
    else
      echo -e "ERROR: ${1} is not a file\n"
